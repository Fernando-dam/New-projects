{
  "name": "universidad-x-asistente-virtual",
  "version": "1.0.0",
  "description": "Sistema de Asistente Virtual para inscripciones universitarias",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "setup-db": "node scripts/setup-database.js",
    "migrate": "node scripts/run-migrations.js",
    "seed": "node scripts/seed-data.js",
    "backup": "node scripts/backup-database.js",
    "restore": "node scripts/restore-database.js",
    "docs": "jsdoc -c jsdoc.conf.json",
    "build:frontend": "cd frontend && npm run build",
    "deploy": "pm2 start ecosystem.config.js --env production"
  },
  "keywords": [
    "universidad",
    "asistente-virtual",
    "inscripciones",
    "educacion",
    "nodejs",
    "mysql",
    "express"
  ],
  "author": "Universidad X - Equipo de Desarrollo",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.6.0",
    "bcrypt": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.4",
    "dotenv": "^16.3.1",
    "joi": "^17.9.2",
    "winston": "^3.10.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "express-validator": "^7.0.1",
    "cookie-parser": "^1.4.6",
    "express-session": "^1.17.3",
    "connect-redis": "^7.1.0",
    "redis": "^4.6.7",
    "node-cron": "^3.0.2",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43",
    "uuid": "^9.0.0",
    "slugify": "^1.6.6",
    "sharp": "^0.32.5",
    "pdf-lib": "^1.17.1",
    "qrcode": "^1.5.3",
    "nodemailer-html-to-text": "^3.2.0",
    "express-fileupload": "^1.4.0",
    "sanitize-html": "^2.11.0",
    "xss": "^1.0.14",
    "rate-limiter-flexible": "^3.0.8"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "eslint": "^8.47.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "prettier": "^3.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "jsdoc": "^4.0.2",
    "jsdoc-to-markdown": "^8.0.0",
    "@types/node": "^20.5.0",
    "typescript": "^5.1.6",
    "ts-node": "^10.9.1",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/universidad-x/asistente-virtual.git"
  },
  "bugs": {
    "url": "https://github.com/universidad-x/asistente-virtual/issues"
  },
  "homepage": "https://universidad.edu/asistente-virtual",
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!dist/**"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "node_modules/",
      "uploads/",
      "logs/",
      "test/"
    ],
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "js,json"
  }
}