# ================================================
# CONFIGURACIÓN DE ENTORNO - UNIVERSIDAD X
# Sistema Asistente Virtual
# ================================================

# Configuración del Servidor
PORT=3000
NODE_ENV=production
FRONTEND_URL=http://localhost:8080

# Configuración de Base de Datos
DB_HOST=localhost
DB_PORT=3306
DB_USER=app_universidad
DB_PASSWORD=UnivApp2025!
DB_NAME=universidad_x

# Configuración de Seguridad
JWT_SECRET=universidad_x_super_secret_key_2025_production
JWT_EXPIRES_IN=8h
BCRYPT_SALT_ROUNDS=10

# Configuración de Email
EMAIL_SERVICE=gmail
EMAIL_USER=sistema@universidad.edu
EMAIL_PASS=your_app_password_here
EMAIL_FROM_NAME=Universidad X - Sistema Virtual

# Configuración de Archivos
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# Configuración de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de Logs
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# URLs Externas
UNIVERSITY_WEBSITE=https://www.universidad.edu
SUPPORT_EMAIL=soporte@universidad.edu
HELP_DESK_PHONE=+1-800-UNIVERSIDAD

# Configuración de Notificaciones
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
SMS_API_KEY=your_sms_api_key_here

# Configuración de Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=universidad-x-backups

# Configuración de Monitoreo
MONITORING_ENABLED=true
MONITORING_URL=https://monitoring.universidad.edu
ERROR_TRACKING_DSN=your_sentry_dsn_here

# Configuración de Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
CACHE_TTL=3600

# Configuración de Sesiones
SESSION_SECRET=universidad_session_secret_2025
SESSION_COOKIE_MAX_AGE=28800000

# Configuración de SSL
SSL_ENABLED=false
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# Configuración de CDN
CDN_ENABLED=false
CDN_URL=https://cdn.universidad.edu

# Variables de Desarrollo (solo para desarrollo local)
DEV_ENABLE_CORS=true
DEV_ENABLE_LOGGING=true
DEV_MOCK_EMAIL=true
DEV_SKIP_AUTH=false