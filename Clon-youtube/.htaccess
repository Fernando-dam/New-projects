# Habilitar mod_rewrite
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /youtube_clone/
    
    # URLs amigables para videos
    RewriteRule ^video/([0-9]+)$ watch.php?v=$1 [L]
    
    # URLs amigables para canales
    RewriteRule ^@([a-zA-Z0-9_]+)$ channel.php?username=$1 [L]
</IfModule>

# Bloquear acceso directo a archivos de configuración
<FilesMatch "^(database\.php|config\.php)$">
    Require all denied
</FilesMatch>

# Página principal por defecto
DirectoryIndex index.php index.html

# Aumentar límites de subida
<IfModule mod_php.c>
    php_value upload_max_filesize 500M
    php_value post_max_size 500M
    php_value max_execution_time 300
    php_value max_input_time 300
    php_value memory_limit 256M
</IfModule>

# Habilitar caché para recursos estáticos
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType video/mp4 "access plus 1 month"
</IfModule>

# Comprimir archivos para mejor rendimiento
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript
</IfModule>

# Seguridad adicional
<IfModule mod_headers.c>
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set X-Content-Type-Options "nosniff"
</IfModule>

# Manejo de errores
ErrorDocument 404 /youtube_clone/index.php
ErrorDocument 500 /youtube_clone/index.php